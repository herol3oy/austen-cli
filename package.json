{
  "name": "austen",
  "version": "1.0.0",
  "description": "CLI tool to generate ASCII diagrams for book character relationships",
  "main": "dist/index.js",
  "bin": {
    "austen": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run test && tsup src/index.ts --format cjs --clean",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "tsx --test 'src/**/*.test.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "mermaid",
    "books",
    "characters",
    "diagrams",
    "ascii",
    "ai",
    "literature"
  ],
  "author": "Hamed Sedighi",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/herol3oy/austen-cli.git"
  },
  "bugs": {
    "url": "https://github.com/herol3oy/austen-cli/issues"
  },
  "homepage": "https://github.com/herol3oy/austen-cli#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^25.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "beautiful-mermaid": "^0.1.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "ora": "^9.1.0"
  }
}
