{
  "name": "austen-cli",
  "version": "1.0.0",
  "description": "CLI tool to generate Mermaid diagrams for book character relationships",
  "main": "dist/index.js",
  "bin": {
    "austen": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs --clean",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "mermaid",
    "books",
    "characters",
    "diagrams"
  ],
  "author": "Hamed Sedighi",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "beautiful-mermaid": "^0.1.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dotenv": "^17.2.3",
    "inquirer": "^13.2.2",
    "openai": "^6.17.0",
    "ora": "^9.1.0"
  }
}
